{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "lib": ["es2017"],
    "outDir": "lib/types",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./src/**/*", "./sample/**/*"],
  "exclude": ["node_modules"]
}
